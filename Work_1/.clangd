# Apply this config conditionally to all CUDA files
If:
  PathMatch: .*\.(cu|cuh)
CompileFlags:
  Compiler: /usr/local/cuda-13.0/bin/nvcc  # ПРЯМОЙ ПУТЬ к nvcc

---

# Tweak the clangd parse settings for all files
CompileFlags:
  Add:
    - "--cuda-path=/usr/local/cuda-13.0"  # ПРЯМОЙ ПУТЬ к CUDA
    - "-I${workspaceFolder}/core/includes"
    - "-ferror-limit=0"
    - "-std=c++20"
    - "-D__CLANGD__"
    # Добавьте эти флаги для обхода проблем WSL
    - "-Xcompiler=-fPIC"
    - "--forward-unknown-to-host-compiler"
    - "-I/usr/local/cuda-13.0/include"  # ЯВНОЕ указание include путей
  Remove:
    - "-Xfatbin*"
    - "-gencode*"
    - "--generate-code*"
    - "-ccbin*"
    - "--compiler-options*"
    - "--expt-extended-lambda"
    - "--expt-relaxed-constexpr"
    - "-Werror=cross-execution-space-call"
    - "-Xcompiler=-fPIC"
    - "--options-file"
    - "-rdc=true"
    - "-rdc=false"
    - "-arch=native"
Hover:
  ShowAKA: No
InlayHints:
  Enabled: No
Diagnostics:
  Suppress:
    - "variadic_device_fn"
    - "attributes_not_allowed"